programa
{
	// Para doar sangue é necessário ter mais de 18 anos.
	// Desenvolva um programa que leia a idade de uma pessoa e diga se ela pode doar sangue ou não.
	
	funcao inicio()
	{
		inteiro idade
		
		escreva("Entre com a sua idade. ")
		leia(idade)
		se (idade >= 18)
		{
		escreva("Você pode doar sangue.")
		}
		senao
		{
		escreva("Você não pode doar sangue.")
		}
	}
}
