programa
{
	// Exercício 1 25.04.23: contagem regressiva de 5000 até 1
	
	funcao inicio()
	{
		inteiro num
		num = 5000
		enquanto (num >=1)
		{
			escreva(num,"\n")
			num = num - 1
		}
		escreva("\nContagem terminada.")
	}
}
